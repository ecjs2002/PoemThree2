<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pastel2"
    tools:context="com.fireegg1991.poemthree.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/word1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text=""
            android:textSize="40sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/word2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text=""
            android:textSize="40sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/word3"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text=""
            android:textSize="40sp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text=""
                android:textSize="40sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/ans1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textSize="28sp"
                android:layout_marginLeft="4dp"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text=""
                android:textSize="40sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/ans2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textSize="28sp"
                android:layout_marginLeft="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text=""
                android:textSize="40sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/ans3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textSize="28sp"
                android:layout_marginLeft="4dp"/>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:clickable="true"
                android:onClick="clickBack"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="21dp" />

            <ImageView
                android:id="@+id/iv_gamego"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:onClick="clickStart"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="17dp" />

            <ImageView
                android:id="@+id/btn_Re"
                android:layout_width="148dp"
                android:layout_height="148dp"
                android:text="새로하기"
                android:textSize="24sp"
                android:onClick="clickRetry"
                android:visibility="invisible"
                android:layout_alignTop="@+id/iv_back"
                android:layout_alignStart="@+id/iv_back" />

            <ImageView
                android:id="@+id/btn_Up"
                android:layout_width="148dp"
                android:layout_height="148dp"
                android:text="업로드"
                android:textSize="24sp"
                android:onClick="clickUpload"
                android:visibility="invisible"
                android:layout_alignTop="@+id/iv_gamego"
                android:layout_alignEnd="@+id/iv_gamego" />




        </RelativeLayout>


    </LinearLayout>









</LinearLayout>

